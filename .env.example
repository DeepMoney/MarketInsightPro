# PostgreSQL Database Configuration
# Copy this file to .env and fill in your actual values

# PostgreSQL Connection Settings
PGHOST=localhost
PGPORT=5432
PGDATABASE=trading_analytics
PGUSER=postgres
PGPASSWORD=your-secure-password-here

# Optional: Full database URL (alternative to individual PG* vars)
# DATABASE_URL=postgresql://postgres:password@localhost:5432/trading_analytics

# Application Settings
SESSION_SECRET=your-random-secret-key-here

# Streamlit Settings (optional, can also be set in .streamlit/config.toml)
STREAMLIT_SERVER_PORT=5000
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false
